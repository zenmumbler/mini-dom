{
	"compilerOptions": {
		"module": "es2015",
		"target": "es2015",

		"outDir": "../dist/index.esm.js",
		"declaration": true,
		"sourceMap": false,
		"removeComments": false,
		"noEmitOnError": true,

		"strict": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"lib": ["dom", "es2017"]
	},
	"exclude": [
		"build"
	]
}
